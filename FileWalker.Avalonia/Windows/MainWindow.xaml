<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:views="clr-namespace:FileWalker.Avalonia.Views;assembly=FileWalker.Avalonia"
        Title="FileWalker"
        SizeToContent="3">

  <Grid RowDefinitions="Auto, *">
    <ListBox Items="{Binding Results.MatchingFilenames}" Grid.Row="0" Width="200" Height="300" HorizontalAlignment="2"/>
    <views:SearchStatistics Margin="10, 5, 10, 5" Grid.Row="1"/>
  </Grid>
</Window>